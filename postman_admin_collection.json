                                "{{baseUrl}}"
                            ],
                            "path": [
                                "admin",
                                "complaints"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "0"
                                },
                                {
                                    "key": "size",
                                    "value": "20"
                                },
                                {
                                    "key": "status",
                                    "value": "ALL"
                                },
                                {
                                    "key": "wardId",
                                    "value": ""
